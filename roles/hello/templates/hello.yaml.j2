kind: Pod
apiVersion: v1
metadata:
  name: {{pod_name}}
  namespace: {{meta.namespace}}
  labels:
    app: hello
spec:
  containers:
  - name: hello
    command:
    - hello
    image: quay.io/mhrivnak/hello-service
    imagePullPolicy: IfNotPresent
    ports:
      - containerPort: 8080
    env:
      - name: GREETING
        value: {{greeting}}

---
apiVersion: v1
kind: Service
metadata:
  name: {{meta.name}}
  namespace: {{meta.namespace}}
spec:
  selector:
    app: {{meta.name}}
  ports:
  - protocol: TCP
    port: 80
    targetPort: 8080
  type: NodePort
